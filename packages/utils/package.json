{
  "name": "@untile/react-core-utils",
  "version": "0.0.1",
  "homepage": "https://github.com/untile/react-core/packages/utils#readme",
  "bugs": {
    "url": "https://github.com/untile/react-core/issues"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "../../bin/build.sh && node ../../bin/build-package-json.js && sort-package-json",
    "lint": "yarn lint:js && yarn lint:types",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:types": "tsc --noEmit",
    "release": "../../bin/release.sh utils",
    "test": "jest --coverage --passWithNoTests",
    "test-watch": "jest --watch --notify --onlyChanged"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "bash -c tsc --noEmit"
    ],
    "*.@(ts|tsx|js)": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "yarn.lock": [
      "yarn-deduplicate"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(src/.*\\.test.ts)$"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@untile/eslint-config-untile": "^0.0.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.0",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "yarn-deduplicate": "^5.0.0"
  },
  "engines": {
    "node": ">= 14.17.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  }
}
