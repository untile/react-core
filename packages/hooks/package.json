{
  "name": "@untile/react-core-hooks",
  "version": "0.0.0",
  "homepage": "https://github.com/untile/react-core/packages/hooks#readme",
  "bugs": {
    "url": "https://github.com/untile/react-core/issues"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "../../bin/build.sh && node ../../bin/build-package-json.js && sort-package-json",
    "lint": "yarn lint:js && yarn lint:types",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:types": "tsc --noEmit",
    "release": "../../bin/release.sh hooks",
    "test": "jest --coverage --passWithNoTests",
    "test-watch": "jest --watch --notify --onlyChanged"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "bash -c tsc --noEmit"
    ],
    "*.@(ts|tsx|js)": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "yarn.lock": [
      "yarn-deduplicate"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "(src/.*\\.test.tsx?)$"
  },
  "devDependencies": {
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@untile/eslint-config-untile-react": "^1.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "17.0.2",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "yarn-deduplicate": "^5.0.0"
  },
  "peerDependencies": {
    "@jest/types": "*",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "engines": {
    "node": ">= 14.17.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  }
}
